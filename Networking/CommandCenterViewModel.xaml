<UserControl x:Class="Networking.CommandCenterViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Networking"
        mc:Ignorable="d"
        Height="32"
        Width="64">
    <Canvas>
        <Thumb Canvas.Left="{Binding CanvasLeft}" Canvas.Top="{Binding CanvasTop}">
            <Thumb.Template>
                <ControlTemplate>
                    <StackPanel>
                        <Image Name="tplCommandCenterImage" Source="Pack://Application:,,,/Images/CommandAndControl.png" Stretch="Uniform" Width="32" Height="32" HorizontalAlignment="Center"/>
                        <TextBlock Name="tplCommandCenterText" Text="Command" HorizontalAlignment="Center" Width="64"/>
                    </StackPanel>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Canvas>
</UserControl>
